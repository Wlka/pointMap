<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfochangeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp"
            android:columnCount="4"
            android:rowCount="8"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="4"
                android:layout_gravity="center_horizontal"
                android:text="点之记"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="项目名称"/>
            <EditText
                android:id="@+id/textView_projectName"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnSpan="3"
                android:layout_columnWeight="3"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_column="0"
                android:layout_row="2"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="点号"/>
            <EditText
                android:id="@+id/textView_pointName"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:layout_columnWeight="3"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_column="2"
                android:layout_row="2"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="级别"/>
            <EditText
                android:id="@+id/textView_pointLevel"
                android:layout_column="3"
                android:layout_row="2"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:layout_columnWeight="3"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_column="0"
                android:layout_row="3"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="地类土质"/>
            <EditText
                android:id="@+id/textView_pointSoil"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:layout_columnWeight="3"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_column="2"
                android:layout_row="3"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="标石类型"/>
            <EditText
                android:id="@+id/textView_markerType"
                android:layout_column="3"
                android:layout_row="3"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:layout_columnWeight="3"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_column="0"
                android:layout_row="4"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="选点人"/>
            <EditText
                android:id="@+id/textView_selectionPerson"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:layout_columnWeight="3"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_column="2"
                android:layout_row="4"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="选点日期"/>
            <EditText
                android:id="@+id/textView_selectionDate"
                android:layout_column="3"
                android:layout_row="4"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:layout_columnWeight="3"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_column="0"
                android:layout_row="5"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="埋石单位"/>
            <EditText
                android:id="@+id/textView_buriedUnit"
                android:layout_column="1"
                android:layout_row="5"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:layout_columnWeight="3"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_column="2"
                android:layout_row="5"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="埋石日期"/>
            <EditText
                android:id="@+id/textView_buriedDate"
                android:layout_column="3"
                android:layout_row="5"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:layout_columnWeight="3"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <TextView
                android:layout_column="0"
                android:layout_row="6"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:text="所在位置"/>
            <EditText
                android:id="@+id/textView_pointPosition"
                android:layout_column="1"
                android:layout_row="6"
                android:layout_columnSpan="3"
                android:layout_columnWeight="3"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </GridLayout>
        <ImageView
            android:id="@+id/photoViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_addphoto"
            android:clickable="true"/>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="确定"/>
    </LinearLayout>
</ScrollView>